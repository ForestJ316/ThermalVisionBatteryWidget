{
  "modName": "TVF_BatteryWidget",
  "displayName": "Thermal Vision Battery Widget",
  "minMcmVersion": 2,
  "pluginRequirements": ["TVF_BatteryWidget.esp"],
  "content": [
    {
      "text": "Scale",
      "type": "section"
    },
    {
      "id": "fWidgetScale:General",
      "text": "Widget Scale",
      "type": "slider",
      "help": "Adjust the size of the battery widget.",
      "valueOptions": {
        "min": 0.5,
        "max": 1.5,
        "step": 0.05,
        "sourceType": "ModSettingFloat"
      }
    },
    {
      "text": "Position",
      "type": "section"
    },
    {
      "id": "iWidgetMainPos:General",
      "text": "Main",
      "type": "dropdown",
      "help": "Choose the widget position.",
      "valueOptions": {
        "sourceType": "ModSettingInt",
        "options": [
          "Top Left",
          "Top Right",
          "Bottom Right",
          "Bottom Left"
        ]
      }
    },
    {
      "id": "fWidgetPosX:General",
      "text": "X Pos",
      "type": "slider",
      "help": "Adjust the x position.",
      "valueOptions": {
        "min": -500,
        "max": 500,
        "step": 1,
        "sourceType": "ModSettingFloat"
      }
    },
    {
      "id": "fWidgetPosY:General",
      "text": "Y Pos",
      "type": "slider",
      "help": "Adjust the y position.",
      "valueOptions": {
        "min": -500,
        "max": 500,
        "step": 1,
        "sourceType": "ModSettingFloat"
      }
    },
    {
      "text": "Empty Battery Rads",
      "type": "section"
    },
    {
      "id": "bEmptyBatteryGivesRads:General",
      "text": "Flashlight Gives Rads",
      "type": "switcher",
      "help": "Toggle whether running out of battery and not having a spare will give rads while the flashlight remains on.",
      "groupControl": 2,
      "valueOptions": {
        "sourceType": "ModSettingBool"
      }
    },
    {
      "id": "iEmptyBatteryRadsAmount:General",
      "text": "Rads Amount",
      "type": "slider",
      "help": "Adjust the rads per second.",
      "groupCondition": 2,
      "valueOptions": {
        "min": 1,
        "max": 20,
        "step": 1,
        "sourceType": "ModSettingInt"
      }
    },
    { "type": "spacer" }
  ]
}